@model Tienda.Models.Compra

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>Estas seguro de eliminar esto?</h3>
<div>
    <h4>Compra</h4>
    <hr />
    <div class="container mt-4">
        <h2 class="text-center mb-4">Detalles de la Compra</h2>
        <dl class="row">
            <dt class="col-sm-2 font-weight-bold">
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cantidad)
            </dd>

            <dt class="col-sm-2 font-weight-bold">
                @Html.DisplayNameFor(model => model.FechaCompra)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaCompra)
            </dd>

            <dt class="col-sm-2 font-weight-bold">
                @Html.DisplayNameFor(model => model.IdClienteNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdClienteNavigation.Documento)
            </dd>

            <dt class="col-sm-2 font-weight-bold">
                @Html.DisplayNameFor(model => model.IdProductoNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdProductoNavigation.Id)
            </dd>
        </dl>

        <div class="text-center mt-4">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </form>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </div>
    </div>
